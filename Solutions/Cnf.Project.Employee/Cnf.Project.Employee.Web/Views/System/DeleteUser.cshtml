@model UserViewModel
@{
    ViewData["Title"]="删除用户";
}

<h5>准备删除用户： @Model.Name</h5>
<form method="POST" style="width: 480px; margin-top:20px;">
    @Html.HiddenFor(m=>m.UserId)
    @Html.HiddenFor(m=>m.Login)
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<dl>
    <dt>用户账户</dt>
    <dd>@Html.DisplayFor(m=>m.Login)</dd>
    <dt>是否有效</dt>
    <dd>@Html.DisplayFor(m=>m.ActiveStatus)</dd>
</dl>
<div class="row">
    <div class="col-sm-4">
        <button class="btn btn-danger" asp-action="DeleteUser"
            onclick="if(confirm('删除用户是不可恢复的操作，确实要删除吗？')==false)return false;">确认删除</button>
    </div>
    <div class="col-sm-4">
        <a asp-action="EditUser" asp-route-id="@Model.UserId" class="btn btn-success">返回用户</a>
    </div>
</div>
</form>